<project name="xjb" default="test">
	<property name="src.dir" location="src"/>
	<property name="test.dir" location="test"/>
	<property name="lib.dir" location="lib"/>
	
	<property name="build.dir" location="build"/>
	<property name="classes.dir" location="${build.dir}/classes"/>
	<property name="test.classes.dir" location="${build.dir}/test-classes"/>
	<property name="dist.dir" location="${build.dir}/dist"/>
	<property name="jar.file" location="${dist.dir}/${ant.project.name}.jar"/>
	
	<target name="-init">
		<mkdir dir="${build.dir}"/>
	</target>
	
	<target name="compile" depends="-init">
		<mkdir dir="${classes.dir}"/>
		<javac srcdir="${src.dir}" destdir="${classes.dir}" debug="yes">
			<classpath>
				<fileset dir="${lib.dir}" includes="*.jar"/>
			</classpath>
		</javac>
	</target>

	<target name="dist" depends="compile">
		<mkdir dir="${dist.dir}"/>
		<copy todir="${classes.dir}">
			<fileset dir="${src.dir}" excludes="**/*.java"/>
		</copy>
		<jar basedir="${classes.dir}" destfile="${jar.file}"/>
		<copy todir="${dist.dir}" file="${lib.dir}/EXML.jar"/>
	</target>
	
	<target name="test.compile" depends="dist">
		<mkdir dir="${test.classes.dir}"/>
		<javac fork="true" srcdir="${test.dir}" destdir="${test.classes.dir}">
			<classpath>
				<fileset dir="${lib.dir}" includes="**/*.jar"/>
				<pathelement location="${jar.file}"/>
			</classpath>
		</javac>
	</target>
	
	<target name="test" depends="test.compile">
		<junit fork="yes" showoutput="yes" printsummary="yes" haltonfailure="true">
			<formatter type="xml"/>
			<classpath>
				<path location="${test.classes.dir}"/>
				<fileset dir="${lib.dir}" includes="**/*.jar"/>
				<path location="${jar.file}"/>
			</classpath>
			<test name="com.thoughtworks.xjb.AllTests" todir="${test.classes.dir}"/>
		</junit>
	</target>
	
	<target name="clean">
		<delete dir="${build.dir}"/>
	</target>
	
	<target name="clobber" depends="clean">
		<delete dir="${dist.dir}"/>
	</target>
	
	<target name="rebuild" depends="clobber, dist"/>
</project>